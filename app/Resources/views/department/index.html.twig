{% extends 'base.html.twig' %}

{% block body %}
    <h1>Departments list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Id</th>
                {% if app.user.role == "ROLE_ADMIN" %}
                <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td><a href="{{ path('department_show', { 'id': department.id }) }}">{{ department.name }}</a></td>
                <td>{{ department.id }}</td>
                {% if app.user.role == "ROLE_ADMIN" %}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('department_show', { 'id': department.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('department_edit', { 'id': department.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if app.user.role == "ROLE_ADMIN" %}
    <ul>
        <li>
            <a href="{{ path('department_new') }}">Create a new department</a>
        </li>
    </ul>
    {% endif %}
{% endblock %}
