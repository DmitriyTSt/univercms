{% extends 'base.html.twig' %}

{% block body %}
    <h1>Holiday</h1>

    <table>
        <tbody>
            <tr>
                <th>Date</th>
                <td>{% if holiday.date %}{{ holiday.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if holiday.createdat %}{{ holiday.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ holiday.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('holiday_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('holiday_edit', { 'id': holiday.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
