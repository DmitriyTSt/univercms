{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cmsuser</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ cmsuser.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ cmsuser.surname }}</td>
            </tr>
            <tr>
                <th>Patronymic</th>
                <td>{{ cmsuser.patronymic }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{% if cmsuser.birthday %}{{ cmsuser.birthday|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ cmsuser.avatar }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ cmsuser.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ cmsuser.phone }}</td>
            </tr>
            <tr>
                <th>Countbonus</th>
                <td>{{ cmsuser.countBonus }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ cmsuser.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cmsuser_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cmsuser_edit', { 'id': cmsuser.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
