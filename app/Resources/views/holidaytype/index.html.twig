{% extends 'base.html.twig' %}

{% block body %}
    <h1>Holidaytypes list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Payment</th>
                <th>Description</th>
                <th>Id</th>
                {% if app.user.role == "ROLE_ADMIN" %}
                <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for holidaytype in holidaytypes %}
            <tr>
                <td><a href="{{ path('holidaytype_show', { 'id': holidaytype.id }) }}">{{ holidaytype.name }}</a></td>
                <td>{{ holidaytype.payment }}</td>
                <td>{{ holidaytype.description }}</td>
                <td>{{ holidaytype.id }}</td>
                {% if app.user.role == "ROLE_ADMIN" %}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('holidaytype_show', { 'id': holidaytype.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('holidaytype_edit', { 'id': holidaytype.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if app.user.role == "ROLE_ADMIN" %}
    <ul>
        <li>
            <a href="{{ path('holidaytype_new') }}">Create a new holidaytype</a>
        </li>
    </ul>
    {% endif %}
{% endblock %}
